.button
	height: 3em
	line-height: 3em
	text-align:center
	display: inline-block
	font-size: 1em
	padding: 0 1.5em
	background-color: white
	color: brownish-grey
	border: 0
	border-bottom: .3em solid lighten(#222, 50)
	&:hover
		text-decoration:none
		box-shadow: inset 0 0 100px 100px rgba(255, 255, 255, 0.1)
	&:active
		border-bottom: none
		height: 39px
		margin-top: 3px
	&.icon
		padding-top: .5em
.button.verde
	background-color: light-sage
	border-color: darken(light-sage, 8)
.button.primary
	color: #fff
	background-color: watermelon
	border-color: darken(watermelon, 20)
	img
		fill: darken(watermelon, 20)
