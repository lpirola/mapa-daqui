.row.como-funciona
	padding 6em 0
	background-color: watermelon
	text-align: center
	color: #fff
	h2
		padding: 0 0 1em
		font-size: 2em
	.column
		col(1/3)
		padding: 0 1.5em
		.box-img
			height: 7em
			line-height: 7em
			img
				vertical-align: middle
		p
			margin: 1.5em 0
			font-size:1.3em
			font-weight: bold
			&.description
				font-weight: normal
				opacity:0.7
				font-size: .9em
