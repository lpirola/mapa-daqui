.row.formato
	padding 6em 0
	background-color: #EFEAE4
	text-align: center
	h2
		padding: 0 0 0.6em 0
	h3
		padding: 0 0 2.5em 0
		opacity	.5
	.item
		col(1/4, gutter:0.5)
		height: 330px;
		background-color white
		h3
			font-size: 1.2em
			padding: 1em
			font-weight: bold
			opacity:1;
		img
			max-width: 100%
		p
			padding: 0em 1em 1em 1em
			opacity: .7
		&:hover
			text-decoration:none
			box-shadow: inset 0 0 100px 100px rgba(255, 255, 255, 0.1)
